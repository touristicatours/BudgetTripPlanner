// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  trips     Trip[]
}

model Trip {
  id          String   @id @default(cuid())
  userId      String
  title       String?
  destination String
  startDate   DateTime
  endDate     DateTime
  travelers   Int
  currency    String   @default("EUR")
  budgetTotal Int
  pace        String
  interests   String[]
  dietary     String[]
  mustSee     String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  user    User
  days    Day[]
  quotes  Quote[]
  orders  Order[]
}

model Day {
  id       String   @id @default(cuid())
  tripId   String
  date     DateTime
  subtotal Int      @default(0)
  
  trip   Trip
  items  Item[]
}

model Item {
  id          String   @id @default(cuid())
  dayId       String
  time        String
  title       String
  category    String
  lat         Float?
  lng         Float?
  durationMin Int?
  estCost     Int      @default(0)
  notes       String?
  source      String?
  operatorId  String?
  bookingUrl  String?
  placeId     String?
  openFrom    String?
  openTo      String?
  
  day Day
}

model Quote {
  id        String   @id @default(cuid())
  tripId    String
  type      String
  supplier  String
  payload   Json
  price     Int
  currency  String
  deepLink  String?
  createdAt DateTime @default(now())
  
  trip Trip
}

model Order {
  id              String   @id @default(cuid())
  tripId          String
  status          String   @default("pending")
  grandTotal      Int
  currency        String
  providerRef     String?
  paymentIntentId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  trip       Trip
  items      OrderItem[]
  inventory  InventoryHold[]
}

model OrderItem {
  id           String   @id @default(cuid())
  orderId      String
  type         String
  supplier     String
  title        String
  startAt      DateTime?
  endAt        DateTime?
  price        Int
  currency     String
  payload      Json
  providerRef  String?
  
  order Order
}

model InventoryHold {
  id           String   @id @default(cuid())
  orderId      String
  provider     String
  providerRef  String?
  status       String   @default("held")
  expiresAt    DateTime
  
  order Order
}

model WebhookEvent {
  id         String   @id @default(cuid())
  source     String
  payload    Json
  receivedAt DateTime @default(now())
}
